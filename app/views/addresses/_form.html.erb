<%= form_for(@address) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <select id="address_address_type" name="address[address_type]" class="form-control">
      <option>Select Address Type</option>
      <option value="Home">Home</option>
      <option value="Shipping">Shipping</option>
    </select>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class:"form-control", placeholder: "Address", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :address_1, class:"form-control", placeholder: "Address 1", required: false %>
  </div>

  <div class="form-group">
    <%= f.text_field :city, class:"form-control", placeholder: "City", required: true %>
  </div>

  <div class="form-group col-xs-3" style="padding-left:0px">
    <%= f.collection_select(:state_id, State.where("state_active", true), :id, :state_abbrv, {:prompt => "Select"}, :class => "form-control", required: true) %>
  </div>

  <div class="form-group col-xs-3">
    <%= f.text_field :zip, class:"form-control", placeholder: "ZIP", required: true %>
  </div>
  <br />
  <br />
  <br />
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="col-xs-12" style="padding-left:0px">
    <div class="actions">
      <%= f.submit class: "btn btn-success pull-left" do %>
        <i class="icon-plus"></i>
      <% end %>
    </div>
  </div>

<% end %>
